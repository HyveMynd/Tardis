nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation', bs-navbar)
    .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
        a.navbar-brand(href='#') #{title}
    .collapse.navbar-collapse
        ul.nav.navbar-nav
            li(data-match-route="/")
                a(href='/') Home
            li(data-match-route="/about")
                a(href='/about') About
        ul.nav.navbar-nav.navbar-right.padding-20-right(ng-if="!currentUser")
            li(data-match-route="/login")
                a(href="/login") Login
            li(data-match-route="/register")
                a(href="/register") Register
        ul.nav.navbar-nav.navbar-right.padding-20-right(ng-if="currentUser")
            li.navbar-text(ng-bind="currentUser.email")
            li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                    span.glyphicon.glyphicon-user
                    span.caret
                ul.dropdown-menu(role='menu')
                    li
                        a(href='#') Profile
                    li
                        a(href='#') Another action
                    li
                        a(href='#') Something else here
                    li.divider
                    li
                        a(href='#') Logout